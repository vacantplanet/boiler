{
    "name": "conia/boiler",
    "description": "A PHP template engine that doesn't require you to learn a new syntax",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "ebene fÃ¼nf GmbH",
            "email": "conia@ebenefuenf.de",
            "role": "Developer"
        }
    ],
    "homepage": "https://conia.dev/boiler",
    "keywords": [
        "conia",
        "templating",
        "templates"
    ],
    "autoload": {
        "psr-4": {
            "Conia\\Boiler\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Conia\\Boiler\\Tests\\": "tests"
        }
    },
    "require": {
        "php": ">=8.1",
        "symfony/html-sanitizer": "^6.1"
    },
    "require-dev": {
        "pestphp/pest": "^1.21",
        "vimeo/psalm": "^5",
        "dealerdirect/phpcodesniffer-composer-installer": "^0.7.2",
        "staabm/annotate-pull-request-from-checkstyle": "^1.8"
    },
    "config": {
        "allow-plugins": {
            "pestphp/pest-plugin": true,
            "dealerdirect/phpcodesniffer-composer-installer": true
        }
    }
}
